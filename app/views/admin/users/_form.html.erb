<div class="task_header_nav">
  <ul class="nav nav-pills">
    <li class="nav-item">
      <%= link_to t("activerecord.view.user.list"), admin_users_path, class: "nav-link active btn btn-primary" %>
    </li>
  </ul>
</div>

<% if @user.errors.present? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert alert-danger" role="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<%= form_with(model: [:admin, user],local: true) do |f| %>
  <div class="form-group">
    <%= f.label "name",id: 'user_name' %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "email",id: 'email' %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "admin",id: 'admin' %>
    <%= f.check_box :admin,{}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "password",id: 'password' %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "password_confirmation",id: 'password_confirmation' %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
  <%= f.submit t("helpers.submit.create"), class: "btn btn-primary" %>
<% end %>