<h1><%= t("activerecord.view.user.admin_show") %></h1>

<div class="task_header_nav">
  <ul class="nav nav-pills">
    <li class="nav-item">
      <%= link_to t("activerecord.view.user.list"), admin_users_path, class: "nav-link active btn btn-primary" %>
    </li>
  </ul>
</div>

<h2><%= t("activerecord.view.user.info") %></h2>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= t('activerecord.attributes.user.name') %></th>
    <th><%= t('activerecord.attributes.user.email') %></th>
    <th><%= t('activerecord.attributes.user.admin') %></th>
    <th><%= t('activerecord.attributes.user.created_at') %></th>
    <th><%= t('activerecord.attributes.user.updated_at') %></th>
  </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @user.name %></td>
      <td><%= @user.email %></td>
      <td><%= @user.admin %></td>
      <td><%= @user.created_at %></td>
      <td><%= @user.updated_at %></td>
      <td><%= link_to t("activerecord.view.user.edit"), edit_admin_user_path(@user) %></td>
      <td><%= link_to t("activerecord.view.user.destroy"), admin_user_path(@user), method: :delete,
                      data: { confirm: t( "activerecord.view.task.Are you sure you want to delete it?" )} %></td>
    </tr>
  </tbody>
</table>

<h2><%= t("activerecord.view.task.tasks_list") %></h2>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= t('activerecord.attributes.task.task_name') %></th>
    <th><%= t('activerecord.attributes.task.description') %></th>
    <th><%= t('activerecord.attributes.task.deadline') %></th>
    <th><%= t('activerecord.attributes.task.status') %></th>
    <th><%= t('activerecord.attributes.task.rank') %></th>
  </tr>
  </thead>

  <tbody>
  <% @user_tasks.each do |task| %>
    <tr>
      <td><%= task.task_name %></td>
      <td><%= task.description %></td>
      <td><%= task.deadline %></td>
      <td><%= task.status %></td>
      <td><%= task.rank %></td>
    </tr>
  <% end %>
  </tbody>
</table>