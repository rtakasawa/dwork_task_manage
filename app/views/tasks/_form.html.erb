<%= link_to t("activerecord.view.task.tasks_list"), root_path %>

<% if @task.errors.present? %>
  <% @task.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with(model: task,local: true) do |f| %>
  <%= f.label "task_name",id: 'task_name' %>
  <%= f.text_field :task_name %>
  <%= f.label "description",id: 'task_description' %>
  <%= f.text_field :description %>
  <%= f.label "deadline",id: 'task_deadline' %>
  <%= f.date_field :deadline %>
  <%= f.label "status",id: 'task_status' %>
  <%= f.select :status, [ t("activerecord.view.task.not_start"),t("activerecord.view.task.doing"),t("activerecord.view.task.done")] %>
  <%= f.submit t("helpers.submit.create") %>
<% end %>