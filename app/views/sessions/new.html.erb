<h1><%= t("activerecord.view.session.Log_in")  %></h1>

<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
  <div class="form-group">
    <%= f.label t("activerecord.attributes.user.email"),id: 'email' %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t("activerecord.attributes.user.password"),id: 'password' %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <%= f.submit t("activerecord.view.session.go_log_in"), class: "btn btn-primary" %>
<% end %>